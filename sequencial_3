#include <iostream>

int buscaSequencial (int vetor[], int tamanho, int valor){

for (int i = 0; i < tamanho; i++){
    if (vetor[i] == valor)
    return i;
    
} 

return -1;

    
}
    
    int main() {

    int vetor [] = {1, 2, 3, 4, 5, 6};
    int valor = 3;
    
    
    int pos = buscaSequencial(vetor, 6, valor);

    if (pos != -1)
        
        std::cout << "Valor: " << valor << " encontrado na posição " << pos << "\n.";
        
    else
        std::cout << "Valor não encontrado.";
    
    
    return 0;    
    
}
