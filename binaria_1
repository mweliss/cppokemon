#include <iostream>

int buscaBinaria(int vetor[], int tamanho, int valor){
    int inicio = 0, fim = tamanho -1, meio;
    
    while (inicio <= fim){
        meio = (inicio + fim)/ 2;
        
        if (vetor[meio] == valor)
            return meio; //valor encontrado
        else if (vetor [meio]<valor)
            inicio = meio + 1; // busca na metade superior
        else
            fim = meio -1; //busca na metade infetior
    }
    
    return -1; // não encontrado
}

int main (){
    
    int vetor[] = {2, 4, 6, 8, 10, 12, 14};
    int valor = 6;
    int pos = buscaBinaria(vetor, 7, valor);

    if (pos != -1)
        std::cout << "Valor: " << valor << " encontrado na posição " << pos << ".\n";
    else
        std::cout << "Valor não encontrado.";
        
    return 0;
    
}
